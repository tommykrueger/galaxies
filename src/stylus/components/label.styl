
#labels 
	
	.label
		padding: 3px 6px
		color: $colors.turquise
		font-size: 0.75em
		text-shadow: #444 0px 1px 1px
		cursor: pointer
		position: absolute
		transition: opacity 150ms ease-in-out, border 150ms ease-in-out
		border-radius: 4px
		
		&:hover
			
			.label-marker
				border: 1px solid rgba(255, 255, 255, 0.5)
			

		&-marker
			width: 12px
			height: 12px
			position: absolute
			left: -6px
			top: -6px
			border-radius: 50%
			transition: border 150ms ease-in-out
			border: 1px solid rgba(255, 255, 255, 0.0)
