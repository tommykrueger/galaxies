#interface
	width: 100%
	height: 52px
	position: absolute
	top: 0px
	left: 0
	z-index: 10
	background: linear-gradient(top, rgba(50,50,50,0.85), rgba(30,30,30,0.9))
	border-bottom: 1px solid #333333

	#logo
		width: 320px
		margin: 12px 0 0 20px
		display: inline-block
		
		#title
			width: auto
			display: block
			color: steelblue 
			font-size: 1.25em
			font-weight: 100
			
		#subtitle
			width: auto
			display: none
			color: #000 
			font-size: 0.65em
			text-shadow: 0px 1px 10px #fff



#animation-controls
	position: absolute
	top: 6px
	right: 10px
	
	.menu li
		padding: 0 8px
		line-height: 32px
		vertical-align: middle
		span.fa
			color: #fff
			font-size: 1em
			cursor: pointer
			text-align: center



#animation-controls-container
	width 100%
	height 40px
	display none
	position fixed
	top 52px
	left 0
	text-align center
	background-color rgba(30,30,30,0.9)
	#speed-controls
		width 200px
		margin 6px 0 0 -100px
		display inline-block
		text-align center
		position absolute
		left 50%
	.play-pause-btn, 
	.speed-btn,
	.default-speed-btn
		width 32px
		margin 0
		padding 4px 8px
		display inline-block
		text-align center
		color #f1f1f1
		cursor pointer
		background #000
		border 1px solid #333
		transition background 150ms ease-in-out
	.play-pause-btn:hover,
	.speed-btn:hover,
	.default-speed-btn:hover
		background steelblue
	.default-speed-btn
		width auto
		min-width 40px



				

#current-camera-object
	display block
	top 58px
	left 22px
	color #fff
	font-size 0.75em
	padding 6px 12px
	border-radius 2px
	z-index 99
	background-color rgba(76, 108, 178, 0.75)
	position absolute



#footer 
	width 100%
	height 52px
	color #fff
	position absolute
	left 0
	bottom 0
	display block
	background-color rgba(30,30,30,0.5)
	border-top 1px solid rgba(255,255,255,0.025)
	#loading
		width 320px
		margin 0 0 0 -160px
		display none
		position absolute
		top -32px
		left 50%
		color #00ffff
		font-size 0.75em
		text-align center
	#distances
		width 800px
		margin 0 auto
		text-align center
		li
			padding 0 12px
			display inline-block
			font-size 0.85em
			line-height 52px
			border-right 1px solid rgba(255,255,255,0.025)
		li:last-child
			border 0

#copyright
	margin 0 24px 0 0
	color #555
	font-size 0.75em
	line-height 52px
	position absolute
	top 0
	right 0


